<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="navBarButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="accountBalance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/capway_solid_text</item>
    </style>
    <style name="accountBalanceTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_light_gray_low_alpha_text</item>
    </style>
    <style name="pendingCharges">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_light_gray_low_alpha_text</item>
    </style>
    <style name="pendingChargesTitle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_black_text</item>
    </style>
    <style name="capwayCardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_solid_text</item>
    </style>
    <style name="cardStatus">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_black_text</item>
    </style>
    <style name="anchorText">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@drawable/anchor_text_color</item>
    </style>
    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="description">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/capway_grey</item>
    </style>
    <style name="transactionSubHeading">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/capway_light_gray_mid_alpha_text</item>
    </style>

</resources>